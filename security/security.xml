<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">       
        <record id="journal_user_rule" model="ir.rule">
            <field name="name">Access to Journal</field>
            <field name="model_id" ref="account.model_account_journal"/>
            <field name="domain_force">[('id','in', user.journal_ids.ids)]</field>
            <field name="perm_unlink" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>
        <record id="statement_user_rule" model="ir.rule">
            <field name="name">Access to Statement</field>
            <field name="model_id" ref="account.model_account_bank_statement"/>
            <field name="domain_force">[('journal_id','in', user.journal_ids.ids)]</field>
            <field name="perm_unlink" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>
        <record id="statement_line_user_rule" model="ir.rule">
            <field name="name">Access to Statement Line</field>
            <field name="model_id" ref="account.model_account_bank_statement_line"/>
            <field name="domain_force">['|',('journal_id','in',user.journal_ids.ids),['journal_id','=',False]]</field>
            <field name="perm_unlink" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>
        <record id="invoice_user_rule" model="ir.rule">
            <field name="name">Access to Invoice</field>
            <field name="model_id" ref="account.model_account_move"/>
            <field name="domain_force">[('journal_id','in', user.journal_ids.ids),'|','|',('invoice_user_id','=',user.id),('invoice_user_id','=',False),('invoice_user_id','in',user.gopower_allowed_users_ids.ids)]</field>
            <field name="perm_unlink" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>
        <record id="invoice_line_user_rule" model="ir.rule">
            <field name="name">Access to Invoice Line</field>
            <field name="model_id" ref="account.model_account_move_line"/>
            <field name="domain_force">['|',('journal_id','in',user.journal_ids.ids),('journal_id','=',False)]</field>
            <field name="perm_unlink" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>
        <record id="sale_order_user_rule" model="ir.rule">
            <field name="name">Access to Sale Order</field>
            <field name="model_id" ref="sale.model_sale_order"/>
            <field name="domain_force">['|','|',('user_id','=',user.id),('user_id','=',False),('user_id','in',user.gopower_allowed_users_ids.ids)]</field>
            <field name="perm_unlink" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>
        <record id="sale_order_line_user_rule" model="ir.rule">
            <field name="name">Access to Sale Order Line</field>
            <field name="model_id" ref="sale.model_sale_order_line"/>
            <field name="domain_force">['|','|',('order_id.user_id','=',user.id),('order_id.user_id','=',False),('order_id.user_id','in',user.gopower_allowed_users_ids.ids)]</field>
            <field name="perm_unlink" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>
        <record id="payment_user_rule" model="ir.rule">
            <field name="name">Access to Payments</field>
            <field name="model_id" ref="account.model_account_payment"/>
            <field name="domain_force">['|',('journal_id','in', user.journal_ids.ids), ('destination_journal_id','in',user.journal_ids.ids)]</field>
            <field name="perm_unlink" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>

    </data>

</odoo>