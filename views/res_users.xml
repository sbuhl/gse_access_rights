<?xml version="1.0" encoding='UTF-8'?>
<odoo>

    <record id="sbu_user_form" model="ir.ui.view">
        <field name="name">sbu.user.rights.form</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="priority">20</field>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='company_id']" position="after">
                    <field name="journal_ids" widget="many2many_tags"/>
                    <field name="sbu_allowed_users_ids" widget="many2many_tags" domain="[('share', '=', False)]"/>
                    <field name="sbu_allowed_warehouses_ids" widget="many2many_tags"/>
                </xpath>
            </data>
        </field>
    </record>

</odoo>